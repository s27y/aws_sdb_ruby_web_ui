<h1>Attribute#get</h1>
<p>Find me in app/views/attribute/get.html.erb</p>


<%= form_tag({controller: :attribute, action: :get}, method: "post") do %>
<%= label_tag(:domain_name, "Domain Name:") %>
<%= text_field_tag(:domain_name, "glacier") %>
<%= label_tag(:item_name, "Item Name:") %>
<%= text_field_tag(:item_name, "sampleItem") %>

<%= submit_tag("Submit") %>
<% end %>

<% if @list_items && @list_items.items.size != 0 %>
<table border="1">
	<thead>
		<tr>
			<th>Item Name</th>
			<% @all_attributes_names.each do |att_name| %>
			<th><%= att_name %></th>
			<% end -%>
		</tr>
	</thead>
	<tbody>
		<% @item_obj_array.each do |item_obj| %>
		<tr>
			<td><%= item_obj.item_name %> </td>
			<% @all_attributes_names.each do |att_name| %>
			<td><%= simple_format (h item_obj.attributes_hash[att_name.intern]) %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<% else %>
No Item
	
<% end -%> <!--  end of @list_items.items.size != 0-->